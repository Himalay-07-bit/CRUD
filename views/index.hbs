{{>header}}
    <title>CRUD - Home</title>
{{>navbar}}
<div class="container-fluid my-2">
    <h5 class="bg-dark text-light text-center p-2 rounded-5">Student Record</h5>
<table class="table table-striped table-bordered" id="example">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Branch</th>
            <th>Semester</th>
            <th>City</th>
            <th>State</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
       {{#each data}}
        <tr >
            <td>{{_id}}</td>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{phone}}</td>
            <td>{{branch}}</td>
            <td>{{sem}}</td>
            <td>{{city}}</td>
            <td>{{state}}</td>
            <td><a class="btn btn-primary"href="/edit/{{_id}}"><i class="fa fa-edit"></i></a></td>
            <td><a class="btn btn-danger"href="/delete/{{_id}}" onclick="return window.confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash"></i></a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
{{>footer}}